{
  "hosting": {
    "public": "frontend/dist/server",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/tabs/**",   
        "destination": "/tabs/index.html"
      },
      {
        "source": "**",   
        "destination": "/_not-found.html"
      }
    ],
    "headers": [
      {
        "source": "/assets/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=86400"
          }
        ]
      }
    ]
  },
  "functions": {
    "source": "server" 
  }
}
