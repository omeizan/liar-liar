{
    "hosting": {
      "public": "frontend/dist",  
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "/assets/**",  
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=86400" 
            }
          ]
        }
      ]
    },
    "functions": {
      "source": "server" 
    }
  }
  